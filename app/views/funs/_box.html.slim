article.post_frame.post_card
  = remove_fun_link fun
  .post_info
    .photo_frame
      = link_to user_path(fun.user), class: 'photo_box' do
        = show_avatar fun.user, :small

    .poster
      - if fun.content.title?
        h2
          = fun_add_line fun
          = link_to fun.content.title, fun
      - else
        = fun_add_line fun
      = time_ago_format fun.created_at
  .post_object
    = render_fun_partial fun, :box
  .post_nav
    = small_like_button fun
    = small_repost_button fun

    .item_wrapper.comments_box.last_item
      a.item[href="#{fun_path(fun)}/#comments"]
        span.icon
        span.counter: span.slice
          = fun.comments_counter
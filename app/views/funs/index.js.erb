<%
content = ''
if @funs.any?
    content << next_url(@funs) if @funs.first_page?
    @funs.each do |fun|
        content << render("funs/#{view_partial}", fun: fun)
    end
elsif ! params[:page]
    content << render('funs/empty')
end
%>
<%if @tags%>
    <%= javascript_tag do %>
        $('#bitfun_cloud_wrapper').html('<%= render 'tag_cloud', tags: @tags%>');
    <%end%>
<%end%>
<%= content.html_safe %>